@page
@model DemoApp.Pages.IndexModel
@{
    Layout = "~/Pages/Shared/_LayoutEmpty.cshtml";
}

<div class="container-fluid vh-100 bg-light">
    <div class="row h-100 justify-content-center align-items-center bg-light">
        <div class="col-sm-10 col-lg-5">
            <div class="card mx-auto shadow-lg bg-white rounded">
                <div class="card-header bg-info text-white text-center">
                    Login
                </div>
                <div class="card-body">
                    <form class="form-group">
                        <label>Email</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text far fa-envelope"></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <label for="exampleInputPassword1">Password</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text far fa-lock"></span>
                            </div>
                            <input type="password" class="form-control" placeholder="Password">
                        </div>
                        <a type="button" class="btn btn-info btn-block" asp-page="/Dashboard">Login</a>
                    </form>
                </div>
            </div>
            
        </div>
    </div>
</div>